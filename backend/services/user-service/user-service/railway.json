{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -DskipTests -T 1C --batch-mode --no-transfer-progress -Dmaven.test.skip=true -Dmaven.javadoc.skip=true",
    "watchPatterns": ["src/**", "pom.xml"]
  },
  "deploy": {
    "startCommand": "java -Xmx400m -Xms200m -XX:+UseG1GC -XX:MaxRAMPercentage=75 -XX:+UseStringDeduplication -Dserver.tomcat.max-threads=50 -jar target/*.jar",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 300
  }
}